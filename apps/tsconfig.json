{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "es2015", "es2016", "es2019"],
        "jsx": "preserve",
        "baseUrl": "src",
        "target": "es2016",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true
    }
}
